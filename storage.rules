rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para imágenes de perfil
    match /perfiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para imágenes de chat
    match /chat/{matchId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para imágenes temporales
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para imágenes de verificación
    match /verificacion/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para imágenes de reportes
    match /reportes/{reporteId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Reglas para assets públicos
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
